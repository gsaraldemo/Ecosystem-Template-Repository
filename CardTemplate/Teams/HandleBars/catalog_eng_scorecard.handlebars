{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2",
  "body": [
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Service",
          "value": "{{message.data.service.name}}"
        },
        {
          "title": "Maintainer",
          "value": "{{message.data.service.maintainer.name}}"
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "Description"
            },
            {{#each message.data.service.scorecards.edges}}
              {
                "type": "TextBlock",
                "text": "{{this.node.description}}"
              },
            {{/each}}
            {
              "type": "TextBlock",
              "url": ""
            }
          ]
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "Max Score"
            },
            {{#each message.data.service.scorecards.edges}}
              {
                "type": "TextBlock",
                "text": "{{this.node.scorecardSummaries.nodes.0.maxScore}}"
              },
            {{/each}}
            {
              "type": "TextBlock",
              "url": ""
            }
          ]
        },
                {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "Score"
            },
            {{#each message.data.service.scorecards.edges}}
              {
                "type": "TextBlock",
                "text": "{{this.node.scorecardSummaries.nodes.0.score}}"
              },
            {{/each}}
            {
              "type": "TextBlock",
              "url": ""
            }
          ]
        }
      ]
    }
  ]
}
